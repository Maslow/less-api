{
    "categories": {
        ".read": true,
        ".update": "$admin === true",
        ".add": "$admin === true",
        ".remove": "$admin === true"
    },
    "articles": {
        ".read": true,
        ".update": {
            "condition": "$admin === true",
            "data.valid": { 
                "title": {"length": [1, 64], "required": true},
                "content": {"length": [1, 20480]}
            },
            "data.fields": {"allow": ["title", "content"]}
        },
        ".add": {
            "condition": "$admin === true",
            "data.valid": { 
                "type": {"required": true, "in": ["choice", "fill"]}, 
                "title": {"length": [3, 64], "required": true},
                "content": {"length": [3, 20480]},
                "total": {"number": [0, 100], "default": 0, "required": true}
            },
            "data.field": {
                "allow": ["type", "title", "content"]
            }
        },
        ".remove": "$admin === true"
    }
}
